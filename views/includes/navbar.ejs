<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Havenly</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <style>
        /* Navbar Styling */
        .navbar {
            background: azure;
            padding: 12px 20px;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .navbar-brand {
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 1.5px;
            font-family: 'Poppins', sans-serif;
            display: flex;
            align-items: center;
            color: black;
            transition: all 0.3s;
        }
        .navbar-brand:hover {
            color: red;
            transform: scale(1.1);
        }
        #logo {
            color: red;
            margin-right: 8px;
            font-size: 1.5rem;
        }
        .nav-link {
            font-size: 1.1rem;
            font-weight: 500;
            color: black;
            margin: 0 12px;
            transition: all 0.3s ease-in-out;
            position: relative;
        }
        .nav-link:hover {
            color: red;
            transform: translateY(-2px);
            font-weight: 700;
        }
        .nav-link::after {
            content: "";
            width: 0%;
            height: 2px;
            background: red;
            display: block;
            transition: 0.3s;
            margin-top: 2px;
        }
        .nav-link:hover::after {
            width: 100%;
        }
        /* Account Dropdown */
        .dropdown-menu {
            border-radius: 10px;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
            border: none;
            overflow: hidden;
        }
        .dropdown-item {
            transition: all 0.3s;
        }
        .dropdown-item:hover {
            background: red;
            color: white;
        }
        /* Navbar Toggler */
        .navbar-toggler {
            border: none;
            outline: none;
            transition: all 0.3s ease-in-out;
        }
        .navbar-toggler:focus {
            box-shadow: none;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="/">
                <i class="fa-solid fa-mountain-sun" id="logo"></i> Havenly
            </a>
<!-- search -->
<form action="/listings/search" method="GET" class="d-flex search-bar" style="gap: 8px;">
    <input 
        type="text" 
        name="query" 
        class="form-control me-2" 
        placeholder="Search destinations"
        aria-label="Search"
        required
    >
    <button type="submit" class="btn btn-danger"><i class="fas fa-search"></i></button>
</form>


      

            <!-- Navbar Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/listings">Explore</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/listings/new">Create Listing</a>
                    </li>

                    <!-- User Authentication Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> <% if (currUser) { %> <%= currUser.username %> <% } else { %> Account <% } %>
                        </a>
                    
                        <ul class="dropdown-menu dropdown-menu-end">
                            <% if (!currUser) { %> 
                                <li><a class="dropdown-item" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                                <li><a class="dropdown-item" href="/signup"><i class="fas fa-user-plus"></i> Signup</a></li>
                            <% } else { %>
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            <% } %>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
