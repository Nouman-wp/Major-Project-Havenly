<% layout("/layouts/boilerplate") %>

<body style="background-color: azure;">
    <div class="container my-5 d-flex justify-content-center">
        <div class="card form-card p-4" style="border: 2px solid black;">
            <h3 class="text-center fw-bold mb-4">Create a New Listing</h3>
            <form method="POST" action="/listings" enctype="multipart/form-data" >
                <div class="mb-3" >
                    <label class="form-label fw-semibold" >Title</label>
                    <input name="listing[title]" class="form-control" placeholder="Enter title" type="text" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Enter description" rows="3" required></textarea>
                    <div class="invalid-feedback">Describe the location</div>
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label fw-semibold">Image URL</label>
                    <input name="listing[image]" class="form-control" placeholder="Enter image URL/Link" type="text"  />
                    <div class="invalid-feedback">Enter valid Image URL</div>
                </div> -->

                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Image File</label>
                    <input name="listing[image]" class="form-control" placeholder="Enter image URL/Link" type="file"  />
                    <div class="invalid-feedback">Enter valid Image File</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Price</label>
                    <input name="listing[price]" class="form-control" placeholder="Enter price" type="number" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Country</label>
                    <input name="listing[country]" class="form-control" placeholder="Enter country" type="text" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Location</label>
                    <input name="listing[location]" class="form-control" placeholder="Enter location" type="text" required />
                </div>

                <button class="btn btn-dark w-100">Add Listing</button>
            </form>
        </div>
    </div>
</body>
