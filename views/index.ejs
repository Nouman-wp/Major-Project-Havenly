<% layout("/layouts/boilerplate") %>
<%= success %>

    <body>
        <div class="container my-5">
            <h3 class="text-center fw-bold mb-4">All Listings</h3>

            

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% for(let listing of allListings) { %>
                        
                        <div class="col">
                            <div class="card listing-card">
                                <img src="<%= listing.image %>" class="card-img-top" alt="listing_img">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">
                                        <%= listing.title %>
                                    </h5>
                                    <h6 class="card-text text-muted">&#8377; <%= listing.location %>
                                    </h6>
                                    <h6 class="card-text text-muted">&#8377; <%= listing.price.toLocaleString("en-IN") %>
                                            / Night</h6>
                                    <a href="/listings/<%= listing._id %>" class="btn btn-dark w-100">View Listing</a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            
        </div>
    </body>